<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="life.plank.juna.zone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".ZoneApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:replace="android:icon">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".pushnotification.NotificationInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".pushnotification.RegistrationIntentService"
            android:exported="false" />

        <receiver
            android:name="com.microsoft.windowsazure.notifications.NotificationsBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="life.plank.juna.zone" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".view.activity.AuthForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".view.activity.LineupActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.plank.life"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ZoneHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.WarriorGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.FootballFeedDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.activity.GameLaunchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.GamePickerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.PointsGameRulesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SuddenDeathRulesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.CreateArenaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.JoinGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.PointsGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.MultipleUserJoinGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.PointsGameResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SuddenDeathGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SuddenDeathWinnerOrLoserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SuddenDeathResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ClubListViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ClubGameLaunchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ClubPointsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ClubWarriorResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.WarriorWinnerActivity"
            android:screenOrientation="portrait" />
        <!--
            <activity
            android:name=".view.activity.SwipePageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        -->
        <activity
            android:name=".view.activity.ScrubberActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.PinboardActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.CameraActivity" />
        <activity
            android:name=".view.activity.LiveZoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ChatDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".FragmentTestingActivity" />
        <activity
            android:name=".view.activity.VideoPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_video_player"
            android:theme="@style/AppTheme" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="life.plank.juna.zone.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>

        <activity android:name=".view.activity.SignInActivity" />
        <activity android:name=".view.activity.SplashScreenActivity" />
        <activity android:name=".view.activity.SignupPageActivity" />
        <activity android:name=".view.activity.AudioRecorderActivity" />
        <activity
            android:name=".view.activity.MatchLeagueActivity"

            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.MatchResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.FixtureAndResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.RecordAudioActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.PostRecordedAudioActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.SwipePageActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.BoardActivity"
            android:theme="@style/AppTheme" />
    </application>
</manifest>