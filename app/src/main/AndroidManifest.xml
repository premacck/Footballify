<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="life.plank.juna.zone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ZoneApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SpalshScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.SocialLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.activity.ZoneHomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/statusBarCustomStyle" />
        <activity
            android:name=".presentation.activity.WarriorGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.activity.GameLaunchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/statusBarCustomStyle" />
        <activity
            android:name=".presentation.activity.GamePickerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/statusBarCustomStyle" />
        <activity
            android:name=".presentation.activity.PointsGameRulesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/statusBarCustomStyle" />
        <activity
            android:name=".presentation.activity.SuddenDeathRulesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/statusBarCustomStyle" />
        <activity
            android:name=".presentation.activity.CreateArenaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/statusBarCustomStyle" />
        <activity
            android:name=".presentation.activity.JoinGameActivity"
            android:screenOrientation="portrait"
            android:theme="@style/statusBarCustomStyle" />
        <activity
            android:name=".presentation.activity.PointsGameActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>