<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="life.plank.juna.zone">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name=".ZoneApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:replace="android:icon">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".pushnotification.NotificationInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".pushnotification.RegistrationIntentService"
            android:exported="false" />
        <service android:name=".firebasepushnotification.PushNotificationFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".view.activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.microsoft.windowsazure.notifications.NotificationsBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="life.plank.juna.zone" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".view.activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.CameraActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.VideoPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_video_player"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="life.plank.juna.zone.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>

        <activity
            android:name=".view.activity.SwipePageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.AudioRecorderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.FixtureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.RecordAudioActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.PostRecordedAudioActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.AuthForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.MatchBoardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.LeagueInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.PostCommentActivity"
            android:label="@string/title_activity_post_comment"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.ZoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.PrivateBoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.CreateBoardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.activity.TokenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.InviteToBoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.LeagueInfoDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.UserFeedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.TimelineActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.CommentaryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.BoardPreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.JoinBoardActivity"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="${crashlyticsApiKey}" />
    </application>

</manifest>