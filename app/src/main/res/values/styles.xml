<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background_grey</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/black_20</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/black_20</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="stats_header_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="stats_row_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AuthInactiveCardTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <item name="android:textColor">#0095bf</item>
    </style>

    <style name="following_text_view_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:colorAccent">@color/black_20</item>
        <item name="android:textColorHint">@color/grey_0_5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
    </style>

    <style name="post_feed_text_input_style">
        <item name="android:background">@drawable/edit_text_line_blue</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="post_floating_label_style">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Input">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="CardView.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="ZoneSelection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:checked">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/unselected_text_view_bg</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GallerySelection" parent="ZoneSelection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InfoTilesTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/off_white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>


    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TeamStatsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_10sp</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <style name="EngagementLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputPlaceholder">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#80555555</item>
    </style>

    <style name="CardView.Root" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardView.Default.WrapHeight">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="DragArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="DragHandleImageView">
        <item name="android:id">@id/drag_handle_image</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/drag_handle_dark</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="DragHandleLightImageView">
        <item name="android:id">@id/drag_handle_image</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/drag_handle_light</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="MatchParentSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BoomMenuDefault">
        <item name="android:id">@id/boom_menu</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BlurLayoutFullScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:visibility">invisible</item>
        <item name="blk_blurRadius">20</item>
        <item name="blk_downscaleFactor">0.12</item>
        <item name="blk_fps">0</item>
    </style>

    <style name="TabLayoutTitles">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
    </style>

    <style name="DefaultTabLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="tabTextAppearance">@style/TabLayoutTitles</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">@color/off_white</item>
        <item name="tabGravity">fill</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="UserBoardsShimmer">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:background">@drawable/shimmer_circle</item>
        <item name="android:layout_marginEnd">27dp</item>
    </style>

    <style name="UserZonesShimmer">
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_width">323dp</item>
        <item name="android:background">@drawable/shimmer_rectangle</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="UserFeedShimmer">
        <item name="android:layout_height">98dp</item>
        <item name="android:layout_width">98dp</item>
        <item name="android:background">@drawable/shimmer_rectangle</item>
        <item name="android:layout_margin">12.5dp</item>
    </style>

    <style name="NotificationMessageShimmer">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/shimmer_rectangle</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="NotificationTimeShimmer">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/shimmer_rectangle</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="DatePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <item name="boom_menu" type="id" />
    <item name="drag_handle_image" type="id" />
</resources>
