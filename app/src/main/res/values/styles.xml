<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background_grey</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="stats_header_text_style">
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="stats_row_text_style">
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AuthInactiveCardTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <item name="android:textColor">#0095bf</item>
    </style>

    <style name="following_text_view_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:background">@drawable/white_border_background_following</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="post_feed_text_input_style">
        <item name="android:background">@drawable/edit_text_line_blue</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="post_floating_label_style">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Input">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="CardView.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="ZoneSelection">
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:checked">true</item>
        <item name="android:background">@drawable/unselected_text_view_bg</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
