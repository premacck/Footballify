<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background_grey</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/text_hint_label_color</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="stats_header_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="stats_row_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AuthInactiveCardTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <item name="android:textColor">#0095bf</item>
    </style>

    <style name="following_text_view_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="post_feed_text_input_style">
        <item name="android:background">@drawable/edit_text_line_blue</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="post_floating_label_style">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Input">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="CardView.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="ZoneSelection">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:checked">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/unselected_text_view_bg</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MatchInfoTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextColor">@color/grey_0_7</item>
        <item name="tabSelectedTextColor">@color/text_hint_label_color</item>
        <item name="tabIndicatorColor">@color/text_hint_label_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MatchInfoTabTextAppearance</item>
    </style>

    <style name="InfoTilesTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/off_white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>


    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MatchInfoTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey_0_7</item>
    </style>

    <style name="TeamStatsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_10sp</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <style name="EngagementLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/_16_2m</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputPlaceholder">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#80555555</item>
    </style>

    <style name="CardView.Root" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="DragArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="DragHandleImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/drag_handle_dark</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="DragHandleLightImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/drag_handle_light</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
    </style>

    <style name="MatchParentSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PopupContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="ArcMenuDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">34dp</item>
        <item name="menuChildAnim">true</item>
        <item name="menuClickAnim">true</item>
        <item name="menuGravity">Bottom_Middle</item>
        <item name="menuImage">@drawable/ic_un</item>
        <item name="menuNormalColor">@color/fab_button_pink</item>
        <item name="menuShadowElevation">true</item>
        <item name="menuType">large</item>
    </style>

    <style name="BlurLayoutFullScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:visibility">invisible</item>
        <item name="blk_blurRadius">20</item>
        <item name="blk_downscaleFactor">0.12</item>
        <item name="blk_fps">0</item>
    </style>

    <style name="TabLayoutTitles">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/rajdhani_medium</item>
    </style>

    <style name="DefaultTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="tabTextAppearance">@style/TabLayoutTitles</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/transparent_white_two</item>
    </style>

</resources>
