<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/popup_item_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableStart="@drawable/ic_fav_grey"
            android:fontFamily="@font/rajdhani_medium"
            android:drawablePadding="8dp"
            android:padding="3dp"
            android:text="@string/mark_fav"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/popup_item_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableStart="@drawable/ic_mute_bell_grey"
            android:fontFamily="@font/rajdhani_medium"
            android:drawablePadding="11dp"
            android:padding="3dp"
            android:text="@string/mute_notification"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/popup_item_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableStart="@drawable/ic_unfollow"
            android:fontFamily="@font/rajdhani_medium"
            android:drawablePadding="11dp"
            android:padding="3dp"
            android:text="@string/unfollow_zone"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/popup_item_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableStart="@drawable/ic_report"
            android:fontFamily="@font/rajdhani_medium"
            android:drawablePadding="11dp"
            android:padding="3dp"
            android:text="@string/report_zone"
            android:textColor="@color/grey" />

    </LinearLayout>
</androidx.cardview.widget.CardView>