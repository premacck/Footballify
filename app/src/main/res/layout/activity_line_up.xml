<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="life.plank.juna.zone.view.activity.LineUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner_background_linear_layout"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/lineup_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_background_home_team"
            android:padding="7dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/arsenal"
                android:textColor="@color/white"
                android:fontFamily="@font/rajdhani_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/_4_3_3"
                android:textColor="@color/white"
                android:fontFamily="@font/rajdhani_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_corner_background_visiting_team"
            android:padding="7dp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/west_ham"
                android:textColor="@color/white"
                android:fontFamily="@font/rajdhani_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/_3_4_2_1"
                android:textColor="@color/white"
               android:fontFamily="@font/rajdhani_medium" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineup_linear_layout"
            android:layout_centerHorizontal="true"
            android:src="@drawable/goal_box_home_team" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_linear_layout"
            android:layout_centerHorizontal="true"
            android:src="@drawable/goal_box_visiting_team" />

        <View
            android:id="@+id/view_center_line"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_centerInParent="true"
            android:background="@color/white_40_opacity" />

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_background" />

        <LinearLayout
            android:id="@+id/visiting_team_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_linear_layout"
            android:layout_below="@+id/view_center_line"
            android:orientation="vertical"/>
        <LinearLayout
            android:id="@+id/home_team_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_center_line"
            android:layout_below="@+id/lineup_linear_layout"
            android:orientation="vertical"/>
    </RelativeLayout>
</LinearLayout>
