<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.activity.MatchBoardActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/others_color_grey"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/root_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        arc:cardCornerRadius="8dp"
        arc:cardElevation="4dp">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/board_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/board_blur_bg"
            android:animateLayoutChanges="true">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

                <life.plank.juna.zone.util.customview.PublicBoardToolbar
                    android:id="@+id/board_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:useDefaults="true"
                    arc:showLock="false" />

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/board_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <ProgressBar
                android:id="@+id/board_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </android.support.design.widget.CoordinatorLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/drag_area"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:drawableTop="@drawable/drag_handle_light"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:elevation="5dp"
        android:paddingTop="29dp" />

    <ImageView
        android:id="@+id/board_blur_background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:elevation="5dp"
        android:contentDescription="@string/blur_background" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/board_tiles_list_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:padding="14dp"
        android:clipToPadding="false"
        android:elevation="6dp"
        app:layoutManager="life.plank.juna.zone.util.HorizontalLinearLayoutManager"/>

</RelativeLayout>