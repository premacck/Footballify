<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    app:cardCornerRadius="@dimen/feed_card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/feed_image_view"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/football_image_one" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_trending" />

        <ImageView
            android:id="@+id/league_logo"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/feed_image_view"
            android:src="@drawable/img_epl_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/league_logo"
            android:fontFamily="@font/rajdhani_semibold"
            android:lineSpacingExtra="3sp"
            android:text="Kick-off in 2hrs 13 mins"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feed_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/feed_image_view"
            android:fontFamily="@font/raleway_medium"
            android:lineSpacingExtra="3sp"
            android:text="Bournemouth vs Man. United"
            android:textColor="#b82c3f"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>