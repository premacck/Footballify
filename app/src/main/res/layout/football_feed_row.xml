<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/football_feed_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/football_feed_row_margin"
    card_view:cardBackgroundColor="@android:color/holo_blue_dark"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout
        android:id="@+id/relative_layout_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_feed_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_football_dummy_image" />

        <TextView
            android:id="@+id/posted_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:text="16/01\n9min"
            android:textColor="#ffffff" />


        <ImageView
            android:id="@+id/more_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_more" />

        <RelativeLayout
            android:id="@+id/gradient_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@+id/gradient_header"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:background="@color/transparent_grey">

            <TextView
                android:id="@+id/news_feed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Here is your text"
                android:textColor="@color/White"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/gradient_header"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/interaction_layout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/interaction_layout"
            android:background="@drawable/football_header_purple_gradient"
            tools:ignore="NotSibling">

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="TEAMS"
                android:textColor="@color/White"
                android:textSize="8sp" />

            <RelativeLayout
                android:id="@+id/interaction_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/like_label"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@+id/like_image"
                    android:text="1.2M"
                    android:textColor="@color/White"
                    android:textSize="8sp" />

                <ImageView
                    android:id="@+id/comment_image"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@+id/like_label"
                    android:src="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/comment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@+id/comment_image"
                    android:text="12K"
                    android:textColor="@color/White"
                    android:textSize="8sp" />

                <ImageView
                    android:id="@+id/drop_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@+id/comment_label"
                    android:src="@drawable/ic_dropdown" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>