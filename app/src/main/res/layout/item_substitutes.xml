<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/home_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/minute"
        android:drawablePadding="7dp"
        android:ellipsize="end"
        android:fontFamily="@font/rajdhani_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingEnd="12dp"
        android:paddingStart="24dp"
        android:singleLine="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <TextView
        android:id="@+id/home_related_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_player_name"
        android:layout_toStartOf="@+id/minute"
        android:drawablePadding="7dp"
        android:ellipsize="end"
        android:fontFamily="@font/rajdhani_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingEnd="12dp"
        android:paddingStart="24dp"
        android:singleLine="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/rajdhani_bold"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <TextView
        android:id="@+id/visiting_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/minute"
        android:drawablePadding="7dp"
        android:ellipsize="end"
        android:fontFamily="@font/rajdhani_medium"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingEnd="24dp"
        android:paddingStart="12dp"
        android:singleLine="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <TextView
        android:id="@+id/visiting_related_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/visiting_player_name"
        android:layout_toEndOf="@+id/minute"
        android:drawablePadding="7dp"
        android:ellipsize="end"
        android:fontFamily="@font/rajdhani_medium"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingEnd="24dp"
        android:paddingStart="12dp"
        android:singleLine="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

</RelativeLayout>