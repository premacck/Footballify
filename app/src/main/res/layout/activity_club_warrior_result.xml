<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232A38">

    <ImageView
        android:id="@+id/bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_bonus" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bonus"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:text="You Got that right on!"
        android:textColor="@color/White"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/home_team_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="47dp"
        android:layout_toLeftOf="@+id/team_score_layout"
        android:layout_toStartOf="@+id/team_score_layout">

        <ImageView
            android:id="@+id/home_team_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chelsea_logo" />

        <TextView
            android:id="@+id/home_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_team_logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="Chelsea"
            android:textColor="@color/White" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/team_score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/home_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2"
            android:textColor="@color/White"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_team_score"
            android:text=" - "
            android:textColor="@color/White"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/viting_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dash"
            android:text="3 "
            android:textColor="@color/White"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/visiting_team_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_team_view"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/team_score_layout"
        android:layout_toRightOf="@+id/team_score_layout">

        <ImageView
            android:id="@+id/visiting_team_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chelsea_logo" />

        <TextView
            android:id="@+id/visiting_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/visiting_team_logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="Chelsea"
            android:textColor="@color/White" />
    </RelativeLayout>
</RelativeLayout>