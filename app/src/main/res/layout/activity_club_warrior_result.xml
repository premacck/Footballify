<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_sudden_death_result_background">

    <ImageView
        android:id="@+id/bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_bonus" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bonus"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:text="You Got that right on!"
        android:textColor="@color/White"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/home_team_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/total_score"
        android:layout_toStartOf="@+id/total_score">

        <ImageView
            android:id="@+id/home_team_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_chelsea_logo" />

        <TextView
            android:id="@+id/home_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_team_logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="Chelsea"
            android:textColor="@color/White"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/team_score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_team_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp">


        <TextView
            android:id="@+id/home_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2"
            android:textColor="@color/White"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_team_score"
            android:text=" - "
            android:textColor="@color/White"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/visiting_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dash"
            android:text="3 "
            android:textColor="@color/White"
            android:textSize="40sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/visiting_team_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_team_view"
        android:layout_toEndOf="@+id/total_score"
        android:layout_toRightOf="@+id/total_score">

        <ImageView
            android:id="@+id/visiting_team_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_chelsea_logo" />

        <TextView
            android:id="@+id/visiting_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/visiting_team_logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="Chelsea"
            android:textColor="@color/White"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/total_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_team_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="TOTAL SCORE"
        android:textColor="@color/White"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_score_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_score_bg"
        android:gravity="center"
        android:text="786"
        android:textColor="@color/White"
        android:textSize="50sp" />
</RelativeLayout>