<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:textSize="12sp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/rajdhani_medium"
        android:background="@color/light_header"/>

    <TextView
        android:id="@+id/no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_header"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/rajdhani_light"
        android:gravity="center"
        android:text="@string/no_matches_found"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fixtures_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_header"
        tools:listitem="@layout/item_match_fixture"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

</RelativeLayout>