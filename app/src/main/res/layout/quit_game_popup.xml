<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quit_game_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_quit_game_background">

    <TextView
        android:id="@+id/quit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@assets/aileron.bold"
        android:layout_marginTop="40dp"
        android:text="QUIT GAME?"
        android:textColor="@color/dark_blue"
        android:textSize="40sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/popup_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/quit_label"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quit_game_confirm_yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/ic_confirm_yes_image"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/quit_game_confirm_no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:src="@drawable/ic_confirm_no_image"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
</RelativeLayout>