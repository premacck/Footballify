<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/signup_dialogue_bg"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/signup_bg"
                android:layout_width="342dp"
                android:layout_height="189dp"
                android:src="@drawable/signup_dialogue_bg" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="190dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@drawable/img_signup_greeting" />

            <ImageView
                android:id="@+id/drag_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/drag_handle_dark" />

            <TextView
                android:id="@+id/signup_text"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_bg"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:padding="20dp"
                android:text="@string/signup_dialogue"
                android:textColor="@color/grey"
                android:textSize="20sp" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="187dp"
                android:layout_height="50dp"
                android:layout_below="@+id/signup_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/sign_up_now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/social_signup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup_button"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/rajdhani_medium"
                android:gravity="center_horizontal"
                android:text="@string/login_using_social_media"
                android:textColor="#66000000"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/social_signup_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/social_signup_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/facebook_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/twitter_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/facebook_login"
                    android:src="@drawable/twitter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/twitter_login"
                    android:src="@drawable/google" />
            </RelativeLayout>

            <TextView
                android:id="@+id/have_an_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/social_signup_options"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="@string/already_have_an_account"
                android:textColor="#b3555555"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>