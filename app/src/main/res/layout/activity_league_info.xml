<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/purple_toolbar_background"
    app:cardCornerRadius="5dp"
    tools:context=".view.activity.LeagueInfoActivity">

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/league_toolbar"
            layout="@layout/league_toolbar" />

        <include
            android:id="@+id/feed_header"
            layout="@layout/layout_league_info" />

    </LinearLayout>
</android.support.v7.widget.CardView>