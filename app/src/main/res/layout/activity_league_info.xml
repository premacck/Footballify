<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@color/purple_toolbar_background"
        app:cardCornerRadius="8dp"
        tools:context=".view.activity.LeagueInfoActivity">

        <LinearLayout
            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/league_toolbar"
                layout="@layout/league_toolbar" />

            <include
                android:id="@+id/feed_header"
                layout="@layout/layout_league_info" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>