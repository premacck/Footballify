<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/score_board_liner_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="7">

    <TextView
        android:id="@+id/player_stats_serial_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:gravity="center_horizontal"
        android:text="@string/serial_number"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/player_stats_team_logo"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight=".3"
        android:src="@drawable/ic_west_brom_logo" />

    <TextView
        android:id="@+id/player_stats_player_name"
        style="@style/standings_header_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:gravity="start"
        android:singleLine="true"
        android:text="@string/my_team" />

    <TextView
        android:id="@+id/player_stats_goals_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/team_goals"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/player_stats_assist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/assist"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/player_stats_yellow_card_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/player_stats_red_card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal" />
</LinearLayout>