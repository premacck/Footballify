<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/feed_card_corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bullet_image_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_background_grey" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/bullet_image_view"
                android:fontFamily="@font/rajdhani_semibold"
                android:lineSpacingExtra="5sp"
                android:text="CR7_lover"
                android:textColor="@color/grey"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/name_text_view"
                android:fontFamily="@font/rajdhani_regular"
                android:lineSpacingExtra="5sp"
                android:text="Created 2 weeks ago"
                android:textColor="@color/black_50"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/menu_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_options_grey" />

            <TextView
                android:id="@+id/number_of_likes_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/menu_image_view"
                android:drawableLeft="@drawable/ic_like_grey"
                android:drawablePadding="5dp"
                android:fontFamily="@font/rajdhani_medium"
                android:lineSpacingExtra="5sp"
                android:text="0"
                android:textColor="@color/grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/number_of_people_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/number_of_likes_text_view"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_person_grey"
                android:fontFamily="@font/rajdhani_medium"
                android:lineSpacingExtra="5sp"
                android:text="1.4M"
                android:textColor="@color/grey"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/comment_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/feed_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <VideoView
                android:id="@+id/captured_video_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/feed_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/share_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:src="@drawable/ic_share_grey" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/share_image_view"
                android:background="@color/grey" />

            <ImageView
                android:id="@+id/like_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/share_image_view"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:src="@drawable/ic_arrow_up_grey" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/unlike_image_view"
                android:background="@color/grey" />

            <ImageView
                android:id="@+id/unlike_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/like_image_view"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:src="@drawable/ic_arrow_down_grey" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/like_image_view"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/feed_title_text_view"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@+id/like_image_view"
                android:ellipsize="end"
                android:fontFamily="@font/rajdhani_semibold"
                android:lineSpacingExtra="1sp"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Cristiano Ronaldo Top 10 Unimaginable Goals"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
