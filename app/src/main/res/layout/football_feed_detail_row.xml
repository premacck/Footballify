<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/feed_card_corner_radius"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/drag_handle" />

        <RelativeLayout
            android:id="@+id/feed_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drag_handle"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bullet_image_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_background_grey" />

            <TextView
                android:id="@+id/user_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/bullet_image_view"
                android:fontFamily="@font/rajdhani_semibold"
                android:lineSpacingExtra="5sp"
                android:text="CR7_lover"
                android:textColor="@color/grey"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/user_name_text_view"
                android:fontFamily="@font/rajdhani_regular"
                android:lineSpacingExtra="5sp"
                android:text="Created 2 weeks ago"
                android:textColor="@color/black_50"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/menu_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_options_grey" />

            <TextView
                android:id="@+id/shares_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/menu_image_view"
                android:lineSpacingExtra="5sp"
                android:paddingEnd="15dp"
                android:text="2.2M shares"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/feed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feed_top_bar">

            <TextView
                android:id="@+id/comment_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/feed_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <VideoView
                android:id="@+id/captured_video_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/feed_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/like_share_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/feed_content">

            <TextView
                android:id="@+id/feed_title_text_view"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@+id/like_image_view"
                android:ellipsize="end"
                android:fontFamily="@font/rajdhani_semibold"
                android:lineSpacingExtra="1sp"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Cristiano Ronaldo Top 10 Unimaginable Goals"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/share_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:src="@drawable/ic_share_grey" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/share_image_view"
                android:background="@color/grey" />

            <ImageView
                android:id="@+id/like_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/share_image_view"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:src="@drawable/ic_arrow_up_grey" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/unlike_image_view"
                android:background="@color/grey" />

            <ImageView
                android:id="@+id/unlike_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/like_image_view"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:src="@drawable/ic_arrow_down_grey" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/like_image_view"
                android:background="@color/grey" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/like_share_layout">

            <TextView
                android:id="@+id/feed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="12sp" />

        </ScrollView>

    </RelativeLayout>
</android.support.v7.widget.CardView>
