<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    app:bl_arrowDirection="bottom"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="10dp"
    app:bl_arrowWidth="10dp"
    app:bl_bubbleColor="@color/orange"
    app:bl_cornersRadius="0dp">

    <TextView
        android:id="@+id/commentary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/black" />
</com.daasuu.bl.BubbleLayout>