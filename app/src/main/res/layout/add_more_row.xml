<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/football_feed_horizontal_card"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/football_feed_height"
    card_view:cardBackgroundColor="#6e777d"
    android:layout_margin="@dimen/football_banter_view_margin"
    card_view:cardUseCompatPadding="false">
    <RelativeLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:padding="25dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/horizontal_news_label"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView"
            android:layout_margin="3dp"
            android:text="6S: Mark F"
            android:textColor="@color/White"
            android:textSize="7sp" />
        <ImageView
            android:id="@+id/horizontal_news_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_more" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="3dp"
            android:text="Why would Mourinho do that? Isn't he done with this.."
            android:textColor="@color/White"
            android:textSize="9dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>