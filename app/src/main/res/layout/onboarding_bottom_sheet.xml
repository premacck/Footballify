<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    style="@style/MatchParentSize"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/onboarding_root_card"
        style="@style/CardView.Root">

        <RelativeLayout style="@style/MatchParentSize">

            <RelativeLayout
                android:id="@+id/onboarding_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_dialog"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drag_handle"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/raleway_medium"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/follow_teams"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <include
                    android:id="@+id/search_view"
                    layout="@layout/custom_search_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title" />

                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drag_handle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:gravity="end"
                    android:text="NEXT"
                    android:textColor="@color/dark_sky_blue"
                    android:textSize="14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/onboarding_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/search_view"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/item_onboarding" />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            style="@style/DragHandleImageView"
            android:contentDescription="@string/thumbnail" />

        <View
            android:id="@+id/onboarding_drag_area"
            style="@style/DragArea"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>