<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="7dp"
    android:background="@drawable/rounded_dialog"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/drag_handle_dark" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drag_handle"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/raleway_medium"
        android:lineSpacingExtra="8sp"
        android:text="@string/follow_teams"
        android:textColor="@color/grey"
        android:textSize="20sp" />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:iconifiedByDefault="false"
        android:keyboardNavigationCluster="true"
        android:queryHint="@string/search_teams"
        android:textColor="@color/grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/drag_handle"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rajdhani_semibold"
        android:gravity="end"
        android:text="SKIP"
        android:textColor="@color/dark_sky_blue"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/onboarding_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_view"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/item_onboarding" />
</RelativeLayout>