<?xml version="1.0" encoding="utf-8"?>
<io.alterac.blurkit.BlurLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_blur_layout"
    style="@style/BlurLayoutFullScreen">

    <android.support.v7.widget.CardView
        android:id="@+id/root_card"
        style="@style/CardView.Root"
        android:transitionName="@string/pref_match">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/drag_handle_dark"
                android:drawablePadding="4dp"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/headers_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header">

                <include
                    android:id="@+id/standing_header_layout"
                    layout="@layout/standing_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/team_stats_header_layout"
                    layout="@layout/team_stats_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/player_stats_header"
                    layout="@layout/player_stats_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/standing_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/headers_container"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        </RelativeLayout>

        <View
            android:id="@+id/drag_area"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </android.support.v7.widget.CardView>

</io.alterac.blurkit.BlurLayout>