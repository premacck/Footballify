<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        arc:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/preview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-1sp"
                android:drawableTop="@drawable/drag_handle_dark"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:text="@string/preview_your_board"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/board_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/preview_title"
                android:layout_margin="6dp"
                android:orientation="vertical"
                arc:cardBackgroundColor="@color/chocolate_brown"
                arc:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <life.plank.juna.zone.util.customview.GenericToolbar
                        android:id="@+id/preview_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        arc:isLockVisible="true"
                        arc:boardTypeTitle="@string/private_board" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        arc:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/description_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_medium"
                                android:lineSpacingExtra="3sp"
                                android:layout_marginStart="10dp"
                                android:paddingTop="5dp"
                                android:text="@string/description"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/description_title"
                                android:lineSpacingExtra="5sp"
                                android:gravity="start|top"
                                android:padding="10dp"
                                android:fontFamily="@font/rajdhani_medium"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/create_board_button"
                android:layout_width="187dp"
                android:layout_height="50dp"
                android:layout_below="@+id/board_parent_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/create_board"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>