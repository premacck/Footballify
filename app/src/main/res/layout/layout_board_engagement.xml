<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey"
    android:padding="5dp"
    android:paddingEnd="16dp"
    android:paddingStart="10dp">

    <TextView
        android:id="@+id/following_text_view"
        style="@style/following_text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:background="@drawable/white_background_follow"
        android:text="@string/follow"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/number_of_likes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/number_of_comments_text_view"
        android:drawableStart="@drawable/ic_like_grey"
        android:drawablePadding="5dp"
        android:fontFamily="@font/rajdhani_semibold"
        android:lineSpacingExtra="5sp"
        android:text="16.2M"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/number_of_comments_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/number_of_people_text_view"
        android:drawableStart="@drawable/ic_like_grey"
        android:drawablePadding="5dp"
        android:fontFamily="@font/rajdhani_semibold"
        android:lineSpacingExtra="5sp"
        android:text="16.2M"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/number_of_people_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableStart="@drawable/ic_person_grey"
        android:drawablePadding="5dp"
        android:fontFamily="@font/rajdhani_semibold"
        android:lineSpacingExtra="5sp"
        android:text="1.4M"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>