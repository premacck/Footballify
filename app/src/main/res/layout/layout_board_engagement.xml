<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey"
    android:padding="5dp"
    android:paddingEnd="16dp"
    android:paddingStart="10dp">

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/rajdhani_regular"
        android:text="22 April"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_background_grey" />

    <TextView
        android:id="@+id/number_of_likes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/info_text_view"
        android:drawableLeft="@drawable/ic_like_grey"
        android:drawablePadding="5dp"
        android:fontFamily="@font/rajdhani_medium"
        android:lineSpacingExtra="5sp"
        android:text="16.2M"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/number_of_comments_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/number_of_likes_text_view"
        android:drawableLeft="@drawable/ic_like_grey"
        android:drawablePadding="5dp"
        android:fontFamily="@font/rajdhani_medium"
        android:lineSpacingExtra="5sp"
        android:text="16.2M"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/number_of_people_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/number_of_comments_text_view"
        android:drawableLeft="@drawable/ic_person_grey"
        android:drawablePadding="5dp"
        android:fontFamily="@font/rajdhani_medium"
        android:lineSpacingExtra="5sp"
        android:text="1.4M"
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>