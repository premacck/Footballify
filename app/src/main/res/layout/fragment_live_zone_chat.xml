<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_live_zone_chat_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:background="@color/chat_header_background">

        <TextView
            android:id="@+id/back_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/White"
            android:textSize="8sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_arrow_previous"
            android:drawablePadding="10dp"/>

       <ImageView
           android:id="@+id/line_image_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toEndOf="@+id/back_image_view"
           android:layout_toRightOf="@+id/back_image_view"
           android:layout_centerVertical="true"
           android:layout_marginLeft="16dp"
           android:layout_marginRight="16dp"
           android:src="@drawable/ic_line"
           />


        <ImageView
            android:id="@+id/expand_collapse_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_collapse"
            />
        <TextView
            android:id="@+id/people_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:textColor="@color/White"
            android:textSize="8sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/expand_collapse_image_view"
            android:layout_toStartOf="@+id/expand_collapse_image_view"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/ic_person_chat"
            android:drawableRight="@drawable/ic_down_arrow"
            android:drawablePadding="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tottenham_angels"
            android:textColor="@color/White"
            android:textAllCaps="true"
            android:textSize="8sp"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/line_image_view"
            android:layout_toRightOf="@+id/line_image_view"
            android:layout_toStartOf="@+id/people_count_text_view"
            android:layout_toLeftOf="@+id/people_count_text_view"
            android:drawablePadding="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer_live_zone_chat_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/chat_header_background">

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add"/>
        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/comment_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/camera_image"
            android:layout_toRightOf="@+id/add_image"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:background="@drawable/rounded_corner_background"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_body_background"
        android:layout_below="@+id/header_live_zone_chat_relative_layout"
        android:layout_above="@+id/footer_live_zone_chat_relative_layout">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>