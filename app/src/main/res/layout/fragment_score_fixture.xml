<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="life.plank.juna.zone.view.fragment.ScoreFixtureFragment">
    
    <ImageView
        android:id="@+id/cancel_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/cancel" />

    <TextView
        android:id="@+id/show_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cancel_image_view"
        android:text="Show Scores"
        android:textColor="@color/green"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/score_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/show_scores"
        android:background="@color/white" />
</RelativeLayout>
