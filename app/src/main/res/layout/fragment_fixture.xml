<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    style="@style/MatchParentSize"
    android:animateLayoutChanges="true">

    <io.alterac.blurkit.BlurLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/blur_layout"
        style="@style/MatchParentSize"
        android:visibility="invisible"
        app:blk_blurRadius="20"
        app:blk_downscaleFactor="0.12"
        app:blk_fps="0" />

    <android.support.v7.widget.CardView
        android:id="@+id/root_card"
        style="@style/CardView.Root"
        android:visibility="invisible">

        <RelativeLayout style="@style/MatchParentSize">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/drag_handle_dark"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="@string/matches_fixture_results"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fixtures_section_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/item_fixture_matchday" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp" />

            <TextView
                android:id="@+id/no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:fontFamily="@font/rajdhani_light"
                android:text="@string/no_matches_found"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            style="@style/DragHandleImageView"
            android:contentDescription="@string/thumbnail" />

        <View
            android:id="@+id/drag_area"
            style="@style/DragArea" />

    </android.support.v7.widget.CardView>

</RelativeLayout>