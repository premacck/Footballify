<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clapboard_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/clap_board"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    tools:showIn="@layout/fragment_prematch_info">     

    <RelativeLayout
        android:id="@+id/clapboard_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/clapboard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/raleway_semibold"
            android:lineSpacingExtra="3sp"
            android:text="Dart Board"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/clapboard_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clapboard_text"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_dartboard" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dart_board_player_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ozil_image" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/clapboard_image">

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/rajdhani_semibold"
                android:text="Adrián"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/team_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/player_name"
                android:src="@drawable/ic_burnley_logo" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/player_name"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/team_logo"
                android:src="@color/purple" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/player_name"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/circle_image_view"
                android:fontFamily="@font/rajdhani_medium"
                android:text="Goalkeeper"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bio"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team_logo"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rajdhani_medium"
                android:text="Adrian has been supreme for West Ham lately whilst Joe Hart has been a disaster. But going off this display it would seem that some of the Englishman has rubbed off on the Spaniard."
                android:textColor="@color/grey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/darts_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bio"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rajdhani_medium"
                android:text="51"
                android:textColor="@color/dark_sky_blue"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/darts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bio"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/darts_count"
                android:fontFamily="@font/rajdhani_medium"
                android:text=" Darts thrown"
                android:textColor="@color/dark_sky_blue"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/throw_dart_button"
                android:layout_width="80dp"
                android:layout_height="15dp"
                android:layout_below="@+id/bio"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_border_button"
                android:fontFamily="@font/rajdhani_medium"
                android:gravity="center"
                android:text="THROW DART"
                android:textColor="@color/accent"
                android:textSize="10sp" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>