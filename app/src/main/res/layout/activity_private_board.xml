<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/faded_card" />

        <android.support.v7.widget.CardView
            android:id="@+id/root_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="7dp"
            android:orientation="vertical"
            arc:cardBackgroundColor="@color/chocolate_brown"
            arc:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <life.plank.juna.zone.util.customview.GenericToolbar
                    android:id="@+id/private_board_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    arc:boardTypeTitle="@string/private_board"
                    arc:isLockVisible="true" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/private_board_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/private_board_toolbar" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/drag_area"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:elevation="5dp"
            android:paddingTop="29dp" />

        <ImageView
            android:id="@+id/board_blur_background_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/blur_background"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:elevation="6dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/board_tiles_list_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_centerInParent="true"
                android:padding="14dp"
                android:visibility="invisible"
                tools:listitem="@layout/football_feed_detail_row"
                app:layoutManager="life.plank.juna.zone.util.HorizontalLinearLayoutManager" />

            <TextView
                android:id="@+id/recycler_view_drag_area"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_alignTop="@+id/board_tiles_list_full"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/emoji_bottom_sheet" />
</android.support.design.widget.CoordinatorLayout>