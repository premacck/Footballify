<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/faded_card" />

    <android.support.v7.widget.CardView
        android:id="@+id/board_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="7dp"
        android:orientation="vertical"
        arc:cardBackgroundColor="@color/chocolate_brown"
        arc:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <life.plank.juna.zone.util.customview.GenericToolbar
                android:id="@+id/private_board_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                arc:boardTypeTitle="@string/private_board"
                arc:isLockVisible="true" />

            <android.support.v4.view.ViewPager
                android:id="@+id/private_board_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/private_board_toolbar" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/board_blur_background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/blur_background"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:visibility="invisible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/board_tiles_list_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:elevation="2dp"
        android:padding="14dp"
        android:visibility="invisible"
        app:layoutManager="life.plank.juna.zone.util.HorizontalLinearLayoutManager" />

</RelativeLayout>