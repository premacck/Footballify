<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232A38">

    <ImageView
        android:id="@+id/bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_bonus" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bonus"
        android:layout_centerHorizontal="true"
        android:minLines="2"
        android:textSize="25sp"
        android:text="You Got that right on!"
        android:textColor="@color/White"/>

    <ImageView
        android:id="@+id/home_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_club_chelsea" />

    <ImageView
        android:id="@+id/visiting_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/home_team"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:src="@drawable/ic_club_chelsea" />

    <TextView
        android:id="@+id/home_team_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_team"
        android:layout_toEndOf="@+id/home_team"
        android:layout_toRightOf="@+id/home_team"
        android:text="4"
        android:textColor="@color/White"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/visiting_team_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/visiting_team"
        android:layout_toStartOf="@+id/visiting_team"
        android:text="5"
        android:textColor="@color/White"
        android:textSize="60sp" />

</RelativeLayout>