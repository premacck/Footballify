<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/home_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/minute"
        android:layout_toEndOf="@+id/home_player_number"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/rajdhani_medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingStart="24dp"
        android:paddingEnd="12dp"
        android:singleLine="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <TextView
        android:id="@+id/home_player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/home_substitute_icon"
        android:ellipsize="end"
        android:fontFamily="@font/rajdhani_semibold"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <ImageView
        android:id="@+id/home_substitute_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/substitutes"
        android:padding="4dp"
        android:visibility="invisible"
        android:src="@drawable/ic_substitute_in" />

    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/rajdhani_bold"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <TextView
        android:id="@+id/visiting_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/visiting_player_number"
        android:layout_toEndOf="@+id/minute"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/rajdhani_medium"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:singleLine="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <TextView
        android:id="@+id/visiting_player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/visiting_substitute_icon"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/rajdhani_semibold"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_10sp" />

    <ImageView
        android:id="@+id/visiting_substitute_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/substitutes"
        android:padding="4dp"
        android:visibility="invisible"
        android:src="@drawable/ic_substitute_in" />

</RelativeLayout>