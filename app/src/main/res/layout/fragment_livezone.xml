<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header_live_zone_layout"
        layout="@layout/header_livezone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_live_zone_layout"
        android:layout_below="@+id/header_live_zone_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight=".5"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_team_score_text_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/homeTeamTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/home_team_score_text_view"
                    android:layout_toStartOf="@+id/home_team_score_text_view"
                    android:text="Brighton &amp; hove albiono"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/visiting_team_score_text_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/homeTeamTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="3"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/visitingTeamTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/homeTeamTextView"
                    android:layout_toLeftOf="@+id/home_team_score_text_view"
                    android:layout_toStartOf="@+id/home_team_score_text_view"
                    android:text="Chelsea"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/commentary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/home_team_score_text_view"
                    android:maxLines="4"
                    android:minLines="4"
                    android:padding="5dp"
                    android:text="commentary" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/scrubber_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/view"
                    android:background="#333333" />

                <View
                    android:id="@+id/view_after"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/scrubber_recycler_view"
                    android:background="#fff" />

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scrubber_recycler_view"
                    android:background="@drawable/ic_pointer"
                    android:contentDescription="image"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/liveZoneGridViewRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".75"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/fragment_container_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".75" />
    </LinearLayout>

    <include
        android:id="@+id/footer_live_zone_layout"
        layout="@layout/footer_livezone" />
</RelativeLayout>