<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/liveZoneRelativeLayout"
        style="@style/live_zone_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="0dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/live_zone_text_view"
            style="@style/live_zone_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LiveZone" />

        <TextView
            android:id="@+id/previous_match_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/close_image"
            android:layout_toStartOf="@id/close_image"
            android:text="@string/live_zone_previous_match"
            android:textColor="@color/white"
            android:textSize="@dimen/live_zone_header_text_views" />

        <TextView
            android:id="@+id/next_match_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/previous_match_text_view"
            android:layout_toStartOf="@id/previous_match_text_view"
            android:text="@string/live_zone_next_match"
            android:textColor="@color/white"
            android:textSize="@dimen/live_zone_header_text_views" />


        <ImageView
            android:id="@+id/close_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/banter_zone_layout"
        android:layout_below="@+id/liveZoneRelativeLayout"
        android:orientation="vertical">

        <include layout="@layout/live_zone_slider_row_one" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/liveZoneGridViewRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".75" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/banter_zone_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/football_header_purple_gradient">

        <TextView
            android:id="@+id/person_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_dropdown"
            android:gravity="center_vertical"
            android:text="23"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/person_number"
            android:layout_toStartOf="@+id/person_number"
            android:src="@drawable/ic_person" />
    </RelativeLayout>

</RelativeLayout>