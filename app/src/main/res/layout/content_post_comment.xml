<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="life.plank.juna.zone.view.activity.PostRecordedAudioActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/root_layout"
        style="@style/MatchParentSize"
        android:animateLayoutChanges="true">

        <android.support.v7.widget.CardView
            android:id="@+id/root_card"
            style="@style/CardView.Root"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/card_relative_layout"
                style="@style/MatchParentSize"
                android:background="@color/dark_sky_blue">

                <EditText
                    android:id="@+id/comment_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:fontFamily="@font/raleway_bold"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="140"
                    android:padding="20dp"
                    android:selectAllOnFocus="true"
                    android:text="@string/what_s_on_your_mind"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/blue"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_blue_gradient" />

                    <ImageView
                        android:id="@+id/purple"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_purple_gradient" />

                    <ImageView
                        android:id="@+id/green"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_green_gradient" />

                    <ImageView
                        android:id="@+id/orange"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_orange_gradient" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                style="@style/DragHandleImageView"
                android:contentDescription="@string/thumbnail" />

            <View
                android:id="@+id/drag_area"
                style="@style/DragArea"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>