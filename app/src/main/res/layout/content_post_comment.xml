<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="life.plank.juna.zone.view.activity.PostRecordedAudioActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:clipChildren="true"
        app:cardCornerRadius="@dimen/feed_card_corner_radius"
        app:cardElevation="6dp"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="153dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/comment_card_view"
                android:layout_width="match_parent"
                android:layout_height="326dp">

                <RelativeLayout
                    android:id="@+id/card_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blue_gradient">

                    <TextView
                        android:id="@+id/comment_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/raleway_bold"
                        android:maxLength="140"
                        android:padding="20dp"
                        android:text="@string/what_s_on_your_mind"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/blue"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_blue_gradient" />

                        <ImageView
                            android:id="@+id/purple"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_purple_gradient" />

                        <ImageView
                            android:id="@+id/green"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_green_gradient" />

                        <ImageView
                            android:id="@+id/orange"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_orange_gradient" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/post_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_card_view"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_view"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_default_profile"
                    app:civ_border_color="@color/grey_10"
                    app:civ_border_width="1dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/comment_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/profile_image_view"
                    app:hintTextAppearance="@style/post_floating_label_style">

                    <EditText
                        android:id="@+id/comment_edit_text"
                        style="@style/post_feed_text_input_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_post"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="140"
                        android:textCursorDrawable="@null" />
                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:id="@+id/post_to_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comment_input_layout"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@+id/profile_image_view"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/post_to_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/rajdhani_semibold"
                        android:text="@string/post_to"
                        android:textColor="@color/grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|end"
                        android:background="@drawable/grey_background_others"
                        android:fontFamily="@font/rajdhani_medium"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="2dp"
                        android:text="@string/other"
                        android:textColor="@color/others_color_grey"
                        android:textSize="12sp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/post1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/post_to_text_view"
                        android:src="@drawable/ic_blackpool_logo" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/post2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/post1"
                        android:src="@drawable/ic_blackpool_logo" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/post3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/post2"
                        android:src="@drawable/ic_blackpool_logo" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/post3"
                        android:src="@drawable/ic_blackpool_logo" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/post_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/post_to_relative_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/blue_background_post"
                    android:fontFamily="@font/rajdhani_bold"
                    android:gravity="center"
                    android:paddingStart="50dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="50dp"
                    android:paddingBottom="6dp"
                    android:text="@string/post"
                    android:textColor="@color/text_input_bright_sky_blue"
                    android:textSize="20sp" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>