<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_tiles_layout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:elevation="1dp"
    android:animateLayoutChanges="true"
    android:background="@color/transparent_white_one">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/info_tiles_tab_layout"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_lock"
            android:visibility="gone"
            android:contentDescription="@string/lock" />

        <TextView
            android:id="@+id/board_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rajdhani_medium"
            android:drawablePadding="7dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/info_tiles_tab_layout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        style="@style/InfoTilesTabLayout">

        <android.support.design.widget.TabItem
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info" />

        <android.support.design.widget.TabItem
            android:id="@+id/tiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tiles" />

    </android.support.design.widget.TabLayout>

</RelativeLayout>