<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/football_feed_horizontal_card"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/football_feed_height"
    android:layout_margin="@dimen/football_banter_view_margin"
    card_view:cardBackgroundColor="@color/grid_item_grey"
    card_view:cardCornerRadius="0dp"
    card_view:cardUseCompatPadding="false">

    <RelativeLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tile_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tile_content_text_view"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tile_content_text_view"
            android:layout_margin="3dp"
            android:fontFamily="@font/roboto_regular"
            android:text="6S: Mark F"
            android:textColor="@color/white"
            android:textSize="7sp" />

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="46dp"
            android:padding="4dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_dummy_user" />

        <TextView
            android:id="@+id/tile_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="3dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_condensed_regular"
            android:letterSpacing=".03"
            android:maxLines="3"
            android:paddingBottom="2dp"
            android:text="Why would Mourinho do that? Isn't he done with this.."
            android:textColor="@color/white"
            android:textSize="9dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>