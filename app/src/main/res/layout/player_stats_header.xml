<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        style="@style/stats_header_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="24dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/assists"
        android:text="@string/goal" />

    <TextView
        android:id="@+id/assists"
        style="@style/stats_header_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="24dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/yellow_cards"
        android:text="@string/assist" />

    <ImageView
        android:id="@+id/yellow_cards"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/red_cards"
        android:src="@drawable/yellow_right"
        android:contentDescription="@string/yellow" />

    <ImageView
        android:id="@+id/red_cards"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/red_right"
        android:contentDescription="@string/red" />
</RelativeLayout>