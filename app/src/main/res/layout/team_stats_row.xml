<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/score_board_liner_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingEnd="10dp"
    android:paddingStart="8dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/team_stats_serial_number_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="15dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/team_stats_team_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@+id/team_stats_serial_number_text_view"
        android:contentDescription="@string/pref_home_team_logo"
        android:visibility="visible" />

    <TextView
        android:id="@+id/team_stats_team_name_text_view"
        style="@style/stats_header_text_style"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:layout_toEndOf="@+id/team_stats_team_logo"
        android:layout_toStartOf="@+id/team_stats_wins_text_view"
        android:gravity="start|center_vertical" />

    <TextView
        android:id="@+id/team_stats_wins_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="20dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/team_stats_losses_text_view" />

    <TextView
        android:id="@+id/team_stats_losses_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="20dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/team_stats_goals_text_view" />

    <TextView
        android:id="@+id/team_stats_goals_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="24dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/team_stats_pass_text_view" />

    <TextView
        android:id="@+id/team_stats_pass_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="32dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/team_stats_shot_text_view" />

    <TextView
        android:id="@+id/team_stats_shot_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="24dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/team_stats_yellow_card" />

    <TextView
        android:id="@+id/team_stats_yellow_card"
        style="@style/stats_row_text_style"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/team_stats_red_card"
        android:contentDescription="@string/yellow" />

    <TextView
        android:id="@+id/team_stats_red_card"
        style="@style/stats_row_text_style"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/red" />

</RelativeLayout>