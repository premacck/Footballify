<?xml version="1.0" encoding="utf-8"?>
<io.alterac.blurkit.BlurLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_blur_layout"
    style="@style/BlurLayoutFullScreen"
    android:transitionName="@string/timeline_activity"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:id="@+id/root_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="100dp"
        android:transitionName="@string/commentary"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/timeline_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_toStartOf="@+id/drag_handle"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="start|center_vertical"
                    android:padding="6dp"
                    android:text="@string/timeline"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/venue_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="6dp"
                    android:layout_toEndOf="@+id/drag_handle"
                    android:fontFamily="@font/rajdhani_medium"
                    android:gravity="end|center_vertical"
                    android:padding="6dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/drag_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/thumbnail"
                    android:src="@drawable/drag_handle_dark" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timeline_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeline_header_layout"
                android:background="@color/background_color"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/time_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/score"
                    android:drawablePadding="0dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/rajdhani_medium"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_10sp" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/rajdhani_medium"
                    android:gravity="center"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:textColor="@color/grey"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/win_pointer"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/win"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/score"
                    android:drawablePadding="0dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/rajdhani_medium"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:paddingStart="0dp"
                    android:paddingEnd="12dp"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_10sp" />

            </RelativeLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/scrubber"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/timeline_toolbar"
                android:transitionName="@string/timeline_activity" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/timeline_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scrubber"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/item_timeline" />

            <TextView
                android:id="@+id/no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/rajdhani_light"
                android:text="@string/match_yet_to_start"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <View
            android:id="@+id/drag_area"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </android.support.v7.widget.CardView>

</io.alterac.blurkit.BlurLayout>