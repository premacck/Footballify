<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout">

    <RelativeLayout
        android:id="@+id/timeline_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/home_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/score"
            android:gravity="end|center_vertical"
            android:drawablePadding="7dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="@font/rajdhani_semibold"
            android:textSize="@dimen/text_10sp"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="12sp"
            android:textColor="@color/grey" />

        <ImageView
            android:id="@+id/win_pointer"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:contentDescription="@string/win" />

        <TextView
            android:id="@+id/visiting_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/score"
            android:layout_toStartOf="@+id/time_status"
            android:gravity="start|center_vertical"
            android:drawablePadding="7dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="@font/rajdhani_semibold"
            android:textSize="@dimen/text_10sp"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/time_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end|center_vertical"
            android:drawablePadding="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="@font/rajdhani_medium"
            android:textSize="@dimen/text_10sp"
            android:textColor="@color/grey" />

    </RelativeLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/scrubber"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:transitionName="@string/timeline_activity"
        android:layout_below="@+id/timeline_toolbar" />

</RelativeLayout>