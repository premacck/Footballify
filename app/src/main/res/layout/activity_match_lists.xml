<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_lists"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/zone_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_zone_logo" />

    <include
        android:id="@+id/football_toolbar"
        layout="@layout/zone_football_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignBottom="@+id/zone_logo"
        android:layout_marginBottom="@dimen/football_toolbar_margin_bottom"
        android:layout_toEndOf="@+id/zone_logo"
        android:layout_toRightOf="@+id/zone_logo" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/zone_logo"
        android:id="@+id/match_lists_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/match_list_white_background" />
</RelativeLayout>
