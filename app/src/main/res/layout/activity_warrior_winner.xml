<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_winner_bg"
    tools:context="life.plank.juna.zone.view.activity.WarriorWinnerActivity">

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_home_icon" />


    <ImageView
        android:id="@+id/warrior_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:background="@drawable/ic_warrior_logo" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/warrior_logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_club_chelsea" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/warrior_logo"
        android:layout_alignRight="@+id/warrior_logo"
        android:layout_below="@+id/warrior_logo"
        android:layout_marginTop="45dp"
        android:text="77689"
        android:textColor="@color/White"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/high_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_text"
        android:layout_centerHorizontal="true"
        android:text="NEW HIGH SCORE"
        android:textColor="@color/material_yellow_200" />

    <TextView
        android:id="@+id/rank_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/high_score_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="You've climbed up to"
        android:textColor="@color/White" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank_label"
        android:layout_centerHorizontal="true"
        android:text="RANK 8"
        android:textColor="@color/material_yellow_400"
        android:textSize="20sp" />
</RelativeLayout>
