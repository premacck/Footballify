<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signup_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Orange"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/zone_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_zone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zone_logo"
        android:paddingBottom="30dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="50dp"
                android:textColorHint="@color/White">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_username"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_username"
                    android:hint="@string/user_name"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/White"
                    android:textCursorDrawable="@drawable/custom_cursor_drawable" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_user_name"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:textColorHint="@color/White">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_username"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_username"
                    android:hint="@string/signup_first_name"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/White"
                    android:textCursorDrawable="@drawable/custom_cursor_drawable" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_first_name"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:textColorHint="@color/White">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_username"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_username"
                    android:hint="@string/signup_last_name"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/White"
                    android:textCursorDrawable="@drawable/custom_cursor_drawable" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_last_name"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:textColorHint="@color/White">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_password"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@color/White"
                    android:textCursorDrawable="@drawable/custom_cursor_drawable" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_password"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:textColorHint="@color/White">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_password"
                    android:hint="@string/sign_up_confirm_password"
                    android:inputType="textPassword"
                    android:textColor="@color/White"
                    android:textCursorDrawable="@drawable/custom_cursor_drawable" />

            </android.support.design.widget.TextInputLayout>

            <com.alirezaahmadi.progressbutton.ProgressButtonComponent
                android:id="@+id/button_sign_up"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/text_input_confirm_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:alpha="0.5"
                android:background="@color/Green"
                android:enabled="false"
                android:gravity="center"
                android:padding="10dp"
                app:buttonText="@string/sign_up"
                app:buttonTextColor="@color/White"
                app:buttonTextSize="20sp"
                app:progressColor="@color/White"
                app:progressWidth="2dp" />

            <TextView
                android:id="@+id/text_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_sign_up"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/sign_in_here"
                android:textColor="@color/White"
                android:textSize="15sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>