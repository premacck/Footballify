<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/purple_toolbar_background"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_layout"
            layout="@layout/toolbar_layout" />

        <include
            android:id="@+id/layout_board_engagement"
            layout="@layout/layout_board_engagement"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/include_layout" />

        <include
            android:id="@+id/layout_info_tiles"
            layout="@layout/layout_info_tiles"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/layout_board_engagement" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_info_tiles">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="@dimen/feed_card_corner_radius"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="2dp"
                        android:paddingEnd="2dp"
                        android:paddingStart="2dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/raleway_medium"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/matches_fixtures_amp_results"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/see_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/rajdhani_semibold"
                                android:gravity="end"
                                android:lineSpacingExtra="5sp"
                                android:text="@string/see_all"
                                android:textColor="@color/dark_sky_blue"
                                android:textSize="10sp" />
                        </RelativeLayout>

                        <FrameLayout
                            android:id="@+id/frame_layout_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <fragment
                                android:id="@+id/fragment_one"
                                android:name="life.plank.juna.zone.view.fragment.GraphFragment"
                                android:layout_width="match_parent"
                                android:layout_height="70dp" />
                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/light_grey" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <fragment
                                android:id="@+id/fragment_two"
                                android:name="life.plank.juna.zone.view.fragment.GraphFragment"
                                android:layout_width="match_parent"
                                android:layout_height="70dp" />
                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/light_grey" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="@dimen/feed_card_corner_radius"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:lineSpacingExtra="5sp"
                            android:padding="5dp"
                            android:text="@string/standings"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/see_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/rajdhani_semibold"
                            android:lineSpacingExtra="5sp"
                            android:padding="5dp"
                            android:text="@string/see_complete_standing"
                            android:textColor="@color/dark_sky_blue"
                            android:textSize="10sp" />

                        <include
                            android:id="@+id/standing_header_layout"
                            layout="@layout/standing_header_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/see_complete" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/standing_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@+id/standing_header_layout"
                            android:nestedScrollingEnabled="false" />
                    </RelativeLayout>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/feed_card_corner_radius"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_medium"
                            android:lineSpacingExtra="5sp"
                            android:padding="5dp"
                            android:text="@string/team_stats"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/see_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/rajdhani_semibold"
                            android:lineSpacingExtra="5sp"
                            android:padding="5dp"
                            android:text="@string/see_more"
                            android:textColor="@color/dark_sky_blue"
                            android:textSize="10sp" />

                        <include
                            android:id="@+id/team_stats_header_layout"
                            layout="@layout/team_stats_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/see_more" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/team_stats_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@+id/team_stats_header_layout"
                            android:nestedScrollingEnabled="false" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/feed_card_corner_radius"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rajdhani_regular"
                            android:lineSpacingExtra="5sp"
                            android:padding="5dp"
                            android:text="@string/player_stats"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/see_more_player_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/rajdhani_regular"
                            android:lineSpacingExtra="5sp"
                            android:padding="5dp"
                            android:text="@string/see_more"
                            android:textColor="@color/dark_sky_blue"
                            android:textSize="12sp" />

                        <include
                            android:id="@+id/player_stats_header"
                            layout="@layout/player_stats_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/see_more_player_stats" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/player_stats_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/player_stats_header"
                            android:nestedScrollingEnabled="false" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>