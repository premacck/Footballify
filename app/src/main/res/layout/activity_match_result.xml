<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_toolbar_background"
    android:orientation="vertical"
    tools:context=".view.activity.MatchResultActivity">

    <include
        android:id="@+id/include_layout"
        layout="@layout/toolbar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/standing_card_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="@dimen/feed_card_corner_radius"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/standing_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/standing_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rajdhani_regular"
                        android:lineSpacingExtra="5sp"
                        android:padding="5dp"
                        android:text="@string/standings"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/see_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/rajdhani_regular"
                        android:lineSpacingExtra="5sp"
                        android:padding="5dp"
                        android:text="@string/see_complete_standing"
                        android:textColor="@color/dark_sky_blue"
                        android:textSize="10sp" />

                    <include
                        android:id="@+id/standing_header_layout"
                        layout="@layout/standing_header_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/see_complete" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/standing_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/standing_header_layout" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/team_stats_card_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="@dimen/feed_card_corner_radius"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/team_stats_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/team_stats_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rajdhani_regular"
                        android:lineSpacingExtra="5sp"
                        android:padding="5dp"
                        android:text="Team Stats"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/rajdhani_regular"
                        android:lineSpacingExtra="5sp"
                        android:padding="5dp"
                        android:text="@string/see_more"
                        android:textColor="@color/dark_sky_blue"
                        android:textSize="10sp" />

                    <include
                        android:id="@+id/standing_header_layout"
                        layout="@layout/team_stats_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/see_more" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/team_stats_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/standing_header_layout" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/player_stats_card_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="@dimen/feed_card_corner_radius"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/player_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/player_stats_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rajdhani_regular"
                        android:lineSpacingExtra="5sp"
                        android:padding="5dp"
                        android:text="@string/team_stats"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/see_more_player_stats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/rajdhani_regular"
                        android:lineSpacingExtra="5sp"
                        android:padding="5dp"
                        android:text="@string/see_more"
                        android:textColor="@color/dark_sky_blue"
                        android:textSize="12sp" />

                    <include
                        android:id="@+id/player_stats_header"
                        layout="@layout/player_stats_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/see_more_player_stats" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/player_stats_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/player_stats_header" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>