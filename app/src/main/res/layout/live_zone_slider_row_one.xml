<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="3">

        <TextView
            android:id="@+id/home_team_score_text_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/red"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/homeTeamTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/home_team_score_text_view"
            android:layout_toStartOf="@+id/home_team_score_text_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp"
            android:text="Brighton &amp; hove albiono"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/commentary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_team_score_text_view"
            android:maxLines="4"
            android:minLines="4"
            android:padding="5dp"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/visiting_team_score_text_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/home_team_score_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/red"
            android:gravity="center"
            android:text="3"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/visitingTeamTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/homeTeamTextView"
            android:maxLines="1"
            android:minLines="1"
            android:ellipsize="end"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@+id/visiting_team_score_text_view"
            android:layout_toStartOf="@+id/visiting_team_score_text_view"
            android:text="Chelsea"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="#fff" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/scrubber_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view"
            android:background="#333333" />

        <View
            android:id="@+id/view_after"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/scrubber_recycler_view"
            android:background="#fff" />

        <ImageView
            android:id="@+id/pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrubber_recycler_view"
            android:background="@drawable/ic_pointer"
            android:scaleType="fitCenter"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>