<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.league.LeagueInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/match_fixture_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:transitionName="match_fixture_result"
            app:cardCornerRadius="@dimen/feed_card_corner_radius"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/raleway_medium"
                    android:lineSpacingExtra="5sp"
                    android:padding="5dp"
                    android:text="@string/matches_fixtures_amp_results"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <life.plank.juna.zone.view.fragment.GraphFragment
                    android:id="@+id/fragment_one"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/light_grey" />

                <life.plank.juna.zone.view.fragment.GraphFragment
                    android:id="@+id/fragment_two"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <TextView
                    android:id="@+id/see_all_fixtures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:foreground="@drawable/ripple_dark_rect"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/see_all"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_sky_blue"
                    android:textSize="12sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/standings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="@dimen/feed_card_corner_radius"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp">

                <TextView
                    android:id="@+id/standings_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:lineSpacingExtra="5sp"
                    android:padding="5dp"
                    android:text="@string/standings"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <include
                    android:id="@+id/standing_header_layout"
                    layout="@layout/standing_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/standings_title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/standing_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/standing_header_layout"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/standing_row" />

                <TextView
                    android:id="@+id/no_standings"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/standing_header_layout"
                    android:fontFamily="@font/rajdhani_light"
                    android:gravity="center"
                    android:text="@string/failed_to_get_standings"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/see_all_standings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/standing_recycler_view"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:foreground="@drawable/ripple_dark_rect"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/see_complete_standing"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_sky_blue"
                    android:textSize="12sp" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/team_stats_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/feed_card_corner_radius"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp">

                <TextView
                    android:id="@+id/team_stats_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:lineSpacingExtra="5sp"
                    android:padding="5dp"
                    android:text="@string/team_stats"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <include
                    android:id="@+id/team_stats_header_layout"
                    layout="@layout/team_stats_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/team_stats_title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/team_stats_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/team_stats_header_layout"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/team_stats_row" />

                <TextView
                    android:id="@+id/no_team_stats"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/team_stats_header_layout"
                    android:fontFamily="@font/rajdhani_light"
                    android:gravity="center"
                    android:text="@string/failed_to_get_team_stats"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/see_more_team_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/team_stats_recycler_view"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:foreground="@drawable/ripple_dark_rect"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/see_more"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_sky_blue"
                    android:textSize="12sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/player_stats_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/feed_card_corner_radius"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp">

                <TextView
                    android:id="@+id/player_stats_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:lineSpacingExtra="5sp"
                    android:padding="5dp"
                    android:text="@string/player_stats"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <include
                    android:id="@+id/player_stats_header"
                    layout="@layout/player_stats_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/player_stats_title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/player_stats_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_below="@+id/player_stats_header"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/player_stats_row" />

                <TextView
                    android:id="@+id/no_player_stats"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/player_stats_header"
                    android:fontFamily="@font/rajdhani_light"
                    android:gravity="center"
                    android:text="@string/failed_to_get_player_stats"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/see_more_player_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/player_stats_recycler_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:foreground="@drawable/ripple_dark_rect"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/see_more"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_sky_blue"
                    android:textSize="12sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>