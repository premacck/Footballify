<?xml version="1.0" encoding="utf-8"?>
<io.alterac.blurkit.BlurLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blur_layout"
    style="@style/BlurLayoutFullScreen"
    android:animateLayoutChanges="true"
    android:visibility="invisible"
    tools:context=".view.fragment.post.PostDetailFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/root_card"
        style="@style/CardView.Root">

        <android.support.v4.view.ViewPager
            android:id="@+id/post_detail_view_pager"
            style="@style/MatchParentSize" />

        <ImageView
            style="@style/DragHandleImageView"
            android:contentDescription="@string/thumbnail" />

        <View
            android:id="@+id/drag_area"
            style="@style/DragArea"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp" />

    </android.support.v7.widget.CardView>

</io.alterac.blurkit.BlurLayout>