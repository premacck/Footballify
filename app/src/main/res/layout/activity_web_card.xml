<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.web.WebCardActivity">

    <ImageView
        android:id="@+id/blur_background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/blur_background" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/others_color_grey"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/bg_gradient_white_top"
            android:layout_gravity="top"
            android:contentDescription="@string/blur_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/bg_gradient_white_bottom"
            android:layout_gravity="bottom"
            android:contentDescription="@string/blur_background" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/drag_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="29dp"
        android:paddingBottom="28dp"
        android:src="@drawable/drag_handle_dark"
        android:scaleType="center"
        android:elevation="8dp"
        android:contentDescription="@string/thumbnail" />

</RelativeLayout>