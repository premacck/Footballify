<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingEnd="8dp"
    android:paddingStart="9dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/serial_number_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="15dp" />

    <ImageView
        android:id="@+id/team_logo_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/pref_home_team_logo" />

    <TextView
        android:id="@+id/team_name_text_view"
        style="@style/stats_row_text_style"
        android:gravity="start|center_vertical"
        android:layout_toEndOf="@+id/team_logo_image_view"
        android:layout_toStartOf="@+id/played_text_view"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/played_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="22dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/win_text_view" />

    <TextView
        android:id="@+id/win_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/draw_text_view" />

    <TextView
        android:id="@+id/draw_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/loss_text_view" />

    <TextView
        android:id="@+id/loss_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/goal_for_text_view" />

    <TextView
        android:id="@+id/goal_for_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="22dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/goal_against_text_view" />

    <TextView
        android:id="@+id/goal_against_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="22dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/goal_difference_text_view" />

    <TextView
        android:id="@+id/goal_difference_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="22dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/point_table_text_view" />

    <TextView
        android:id="@+id/point_table_text_view"
        style="@style/stats_row_text_style"
        android:minWidth="20dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>