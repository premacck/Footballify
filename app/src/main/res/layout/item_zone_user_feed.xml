<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_content"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zone_football_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_ball" />

        <TextView
            android:id="@+id/football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:text="@string/football"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/number_of_people_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/football"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/football"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_people"
            android:fontFamily="@font/rajdhani_semibold"
            android:lineSpacingExtra="3sp"
            android:text="@string/_1_4m"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/number_of_comments_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/football"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/number_of_people_text_view"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_card"
            android:fontFamily="@font/rajdhani_semibold"
            android:lineSpacingExtra="3sp"
            android:text="@string/_3_8m"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/number_of_likes_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/football"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/number_of_comments_text_view"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_likes"
            android:fontFamily="@font/rajdhani_semibold"
            android:lineSpacingExtra="3sp"
            android:text="@string/_16_2m"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/football"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_match_bg">

                    <ImageView
                        android:id="@+id/home_team_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="27dp"
                        android:src="@drawable/ic_liverpool_logo" />

                    <ImageView
                        android:id="@+id/visiting_team_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="27dp"
                        android:src="@drawable/ic_arsenal_logo" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/epl_logo"
                        android:layout_width="28dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_epl_logo" />

                    <TextView
                        android:id="@+id/match_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/epl_logo"
                        android:layout_toRightOf="@+id/epl_logo"
                        android:fontFamily="@font/rajdhani_medium"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/match_status"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/match_between"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/epl_logo"
                        android:layout_marginStart="9dp"
                        android:fontFamily="@font/raleway_medium"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/match_between"
                        android:textColor="@color/faded_red"
                        android:textSize="16sp" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v7.widget.CardView>