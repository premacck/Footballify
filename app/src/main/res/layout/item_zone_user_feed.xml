<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zone_football_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:contentDescription="@string/zone_logo"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_ball" />

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/football"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/raleway_semibold"
                android:padding="10dp"
                android:text="@string/football"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/follower_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:drawableStart="@drawable/ic_people"
                android:drawablePadding="8dp"
                android:fontFamily="@font/rajdhani_medium"
                android:lineSpacingExtra="3sp"
                android:text="@string/_1_4m"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_post_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:drawableStart="@drawable/ic_card"
                android:drawablePadding="8dp"
                android:fontFamily="@font/rajdhani_medium"
                android:lineSpacingExtra="3sp"
                android:text="@string/_3_8m"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/interaction_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_likes"
                android:drawablePadding="8dp"
                android:fontFamily="@font/rajdhani_medium"
                android:lineSpacingExtra="3sp"
                android:text="@string/_16_2m"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_layout"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/match_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/match_between"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/center_separator"
                    android:contentDescription="@string/blur_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_match_bg" />

                <RelativeLayout
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/match_bg"
                    android:layout_alignTop="@+id/match_bg"
                    android:layout_alignEnd="@+id/match_bg"
                    android:layout_alignBottom="@+id/match_bg">

                    <ImageView
                        android:id="@+id/home_team_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="27dp"
                        android:contentDescription="@string/pref_home_team_logo"
                        android:src="@drawable/ic_liverpool_logo" />

                    <ImageView
                        android:id="@+id/visiting_team_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="27dp"
                        android:contentDescription="@string/pref_visiting_team_logo"
                        android:src="@drawable/ic_arsenal_logo" />

                </RelativeLayout>

                <View
                    android:id="@+id/center_separator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/league_logo"
                    android:layout_width="32dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/center_separator"
                    android:contentDescription="@string/league_logo"
                    android:padding="5dp"
                    android:src="@drawable/img_epl_logo" />

                <TextView
                    android:id="@+id/match_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/league_logo"
                    android:layout_alignBottom="@+id/league_logo"
                    android:layout_toEndOf="@+id/league_logo"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:text="@string/match_status"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/match_between"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/league_logo"
                    android:layout_toEndOf="@+id/center_separator"
                    android:fontFamily="@font/raleway_medium"
                    android:lineSpacingExtra="3sp"
                    android:paddingStart="9dp"
                    android:paddingEnd="9dp"
                    android:paddingBottom="6dp"
                    android:text="@string/match_between"
                    android:textColor="@color/faded_red"
                    android:textSize="16sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v7.widget.CardView>