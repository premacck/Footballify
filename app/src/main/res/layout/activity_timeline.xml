<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="18dp"
    android:layout_marginEnd="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginTop="24dp"
    app:cardCornerRadius="8dp"
    tools:context=".view.activity.FixtureActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/timeline_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@+id/drag_handle"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="start|center_vertical"
                android:padding="6dp"
                android:layout_marginStart="6dp"
                android:text="@string/timeline"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/venue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/drag_handle"
                android:fontFamily="@font/rajdhani_medium"
                android:gravity="end|center_vertical"
                android:padding="6dp"
                android:layout_marginEnd="6dp"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/drag_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/thumbnail"
                android:src="@drawable/drag_handle_dark" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timeline_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeline_header_layout"
            android:background="@color/background_color"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/time_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/score"
                android:gravity="start|center_vertical"
                android:drawablePadding="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:fontFamily="@font/rajdhani_medium"
                android:textSize="@dimen/text_10sp"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:gravity="center"
                android:fontFamily="@font/rajdhani_medium"
                android:textSize="24sp"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/win_pointer"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:contentDescription="@string/win" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/score"
                android:gravity="end|center_vertical"
                android:drawablePadding="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="12dp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:fontFamily="@font/rajdhani_medium"
                android:textSize="@dimen/text_10sp"
                android:textColor="@color/grey" />

        </RelativeLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/scrubber"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:transitionName="@string/timeline_activity"
            android:layout_below="@+id/timeline_toolbar" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/timeline_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrubber"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/item_timeline" />

        <TextView
            android:id="@+id/no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/rajdhani_light"
            android:text="@string/match_yet_to_start"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>