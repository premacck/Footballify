<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/root_layout"
    style="@style/MatchParentSize"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/info_root_card"
        style="@style/CardView.Root">

        <RelativeLayout
            style="@style/MatchParentSize"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/home_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/vs"
                android:fontFamily="@font/rajdhani_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="12sp"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/rajdhani_medium"
                android:lineSpacingExtra="14sp"
                android:text="vs"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/visiting_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/vs"
                android:fontFamily="@font/rajdhani_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="12sp"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/info_tiles_tab_layout"
                style="@style/MatchInfoTabLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/vs"
                android:layout_marginTop="10dp"
                android:background="@color/background_color">

                <android.support.design.widget.TabItem
                    android:id="@+id/prematch_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREMATCH" />

                <android.support.design.widget.TabItem
                    android:id="@+id/lineups_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LINEUPS" />

                <android.support.design.widget.TabItem
                    android:id="@+id/stats_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATS" />

                <android.support.design.widget.TabItem
                    android:id="@+id/media_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEDIA" />

                <android.support.design.widget.TabItem
                    android:id="@+id/people_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEOPLE" />
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/info_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/info_tiles_tab_layout"
                android:nestedScrollingEnabled="false" />

            <ProgressBar
                android:id="@+id/info_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <ImageView
            style="@style/DragHandleImageView"
            android:contentDescription="@string/thumbnail" />

        <View
            android:id="@+id/drag_area"
            style="@style/DragArea"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>