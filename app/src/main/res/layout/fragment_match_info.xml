<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/root_layout"
    style="@style/MatchParentSize"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/info_root_card"
        style="@style/CardView.Root">

        <RelativeLayout
            style="@style/MatchParentSize"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/home_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/vs"
                android:fontFamily="@font/rajdhani_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="12sp"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/rajdhani_medium"
                android:lineSpacingExtra="14sp"
                android:text="vs"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/visiting_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/vs"
                android:fontFamily="@font/rajdhani_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="12sp"
                android:textColor="@color/grey"
                android:textSize="16sp" />

        </RelativeLayout>

        <ImageView
            style="@style/DragHandleImageView"
            android:contentDescription="@string/thumbnail" />

        <View
            android:id="@+id/drag_area"
            style="@style/DragArea"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>