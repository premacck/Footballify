<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_club_list_background" />

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_home_icon" />


    <TextView
        android:id="@+id/pick_club_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="90dp"
        android:text="@string/pick_club_label"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <GridLayout
        android:id="@+id/club_grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pick_club_label"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/club_chelsea"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_chelsea"
            android:tag="ic_club_chelsea"
            android:contentDescription="Chelsea"/>

        <ImageView
            android:id="@+id/club_man_united"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_man_united"
            android:tag="ic_club_man_united"
            android:contentDescription="Man United"/>

        <ImageView
            android:id="@+id/club_arsenal"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_arsenal"
            android:tag="ic_club_arsenal"
            android:contentDescription="Arsenal"/>

        <ImageView
            android:id="@+id/club_tottenham"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_tottenham"
            android:tag="ic_club_tottenham"
            android:contentDescription="Tottenham"/>

        <ImageView
            android:id="@+id/club_leicester"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_leicester"
            android:tag="ic_club_leicester"
            android:contentDescription="Leicester"/>

        <ImageView
            android:id="@+id/club_chelse"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_chelsea"
            android:tag="ic_club_chelsea" />

        <ImageView
            android:id="@+id/club_liverpool"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_liverpool"
            android:tag="ic_club_liverpool"
            android:contentDescription="Liverpool"/>

        <ImageView
            android:id="@+id/club_man_city"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_man_city"
            android:tag="ic_club_man_city"
            android:contentDescription="Man City"/>

        <ImageView
            android:id="@+id/club_everton"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_club_everton"
            android:tag="ic_club_everton"
            android:contentDescription="Everton"/>


    </GridLayout>

</RelativeLayout>