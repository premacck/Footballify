<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".view.activity.FixtureAndResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/matchday_header"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Matches,FixtureResults" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/current_match_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/matchday_header"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/tommorow_match_header"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#19490064"
                    android:padding="5dp"
                    android:text="Matcheday 36" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tommorow_match_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/upcoming_match_header"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#19490064"
                    android:padding="5dp"
                    android:text="Matcheday 37" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/weekend_match_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>
</RelativeLayout>