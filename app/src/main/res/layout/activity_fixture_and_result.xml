<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="10dp"
    tools:context=".view.activity.FixtureAndResultActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matchday_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Matches,FixtureResults" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/past_match_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/matchday_header"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/match_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Match Day 36" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/live_match_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/matchday_header"
                android:nestedScrollingEnabled="false" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tommorow_match_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/upcoming_match_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_header"
                android:padding="5dp"
                android:text="Match Day 37" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/scheduled_match_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>