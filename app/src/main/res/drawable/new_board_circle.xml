<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Background shadow-->
    <item>
        <shape
            android:innerRadius="90dp"
            android:shape="ring"
            android:thickness="50dp"
            android:useLevel="false">
            <size
                android:width="200dp"
                android:height="200dp" />
            <gradient
                android:endColor="@android:color/transparent"
                android:gradientRadius="200"
                android:startColor="@color/black_170_opaque"
                android:type="radial" />
        </shape>
    </item>

    <!--Outer ring-->
    <item>
        <shape
            android:shape="ring"
            android:thickness="4dp"
            android:innerRadius="90dp"
            android:useLevel="false">
            <size
                android:width="204dp"
                android:height="204dp" />
            <gradient
                android:endColor="@color/mainGradientEnd"
                android:gradientRadius="200"
                android:startColor="@color/mainGradientStart"
                android:type="linear" />
        </shape>
    </item>

    <!--Vertical line-->
    <item android:gravity="center"
        android:width="4dp"
        android:top="75dp"
        android:bottom="75dp">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/mainGradientEnd"
                android:startColor="@color/mainGradientStart" />
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!--Horizontal line-->
    <item android:gravity="center"
        android:width="4dp"
        android:top="75dp"
        android:bottom="75dp">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="90"
                    android:endColor="@color/mainGradientEnd"
                    android:startColor="@color/mainGradientStart" />
                <corners android:radius="4dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>